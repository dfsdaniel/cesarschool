<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:CustomMarkup" 
    xmlns:minhaLib="clr-namespace:MinhaLib;assembly=MinhaLib"
    x:Class="CustomMarkup.MainPage">
    <StackLayout>
        <Label Text="Welcome to Xamarin.Forms!" 
               HorizontalOptions="Center" 
               TextColor="{local:MinhaCor R=0, G=255, B=0}"
               VerticalOptions="CenterAndExpand" />

        <Label Text="Texto da LIB" 
               HorizontalOptions="Center" 
               TextColor="{minhaLib:CorRGB R=255, G=0, B=0}"
               VerticalOptions="CenterAndExpand" />
    </StackLayout> 
</ContentPage>